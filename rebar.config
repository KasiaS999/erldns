%%-*- mode: erlang -*-
{cover_enabled, true}.

{erl_opts, [debug_info, fail_on_warning,
            {platform_define, "^[0-9]+", namespaced_types},
            {parse_transform, lager_transform}]}.

{deps, [lager,
        recon,
        folsom,
        jsx,
        dns_erlang,
        iso8601
]}.

{profiles, [{test, [{deps, [proper]}]}]}.

{shell, [{apps, [erldns]},
         {config, "erldns.config"}]}.

%% This is a rebar3-ism
{overrides, [
    {override, dns,
        [
            {plugins,[
                {provider_asn1, "0.2.3"}
            ]},
            {provider_hooks, [
                {pre, [
                    {compile, {asn, compile}}
                ]},
                {post, [
                    {clean, {asn, clean}}
                ]}
            ]}
        ]
    }
]}.
